<div class="m-2">
        <form class="form-inline md-form form-sm mt-0" method="POST" action="/admin/complaint-view-admin">
          
          <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Enter token no."
            name="search">
            <button type="submit" class="p-1"><i class="fa fa-search"></i></button>
        </form>
      </div>
  {{#if complaints}}

<div class="accordion" id="accordionExample">
  <div class="card">
      {{#each complaints}}
    <div class="card-header" id="headingOne">
      <h2 class="mb-0">
        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Token no. : {{this.token}}
        </button>
      </h2>
    </div>

    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
      <div class="card-body">
        
            <div class="card m-3">
            <div class="card-body">
                <div class="complaint row w-100 justify-content-center allign-content-center d-flex p-2 h-100">
                    <div class="col-md-8">
                        <div class="row w-100">
                            <label class="col-md-6">Token no.</label>  <label class="col-md-6">:{{this.token}}</label>
                        </div>
                        <div class="row w-100">
                            <label class="col-md-6">Name</label><label class="col-md-6">:{{this.name}}</label>
                        </div>
                        <div class="row w-100">
                            <label class="col-md-6">Complaint Category</label> <label class="col-md-6">:{{this.category}}</label>
                        </div>
                        <div class="row w-100">
                            <label class="col-md-6">District</label><label class="col-md-6">:{{this.district}}</label>
                        </div>
                        <div class="row w-100">
                            <label class="col-md-6">Complaint Description</label> <label class="col-md-6">:{{this.description}}</label>
                        </div>
                        <div class="row w-100">
                            <label class="col-md-6">Uploaded image</label class="col-md-6"><a href="/photo/{{this.token}}" >:View</a>
                        </div>
                        <div class="row w-100">
                            <label class="col-md-6">change status</label>
                            <form action="/admin/upload-progress/{{this.token}}" method="post">
                                <select name="progress" >
                                    <option value="rejected">Rejected</option>
                                    <option value="checking">Checking</option>
                                    <option value="under processing">Under processing</option>
                                    <option value="completed">Completed</option>
                                </select>
                                <button class="btn btn-primary" type="submit">change</button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
            </div>
         </div>
    </div>
  {{/each}}
  </div>
</div>
{{else}}
<div class="h-100 text-center m-4"><h3>No complaints</h3></div>
{{/if}}